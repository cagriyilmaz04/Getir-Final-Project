<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_tint"/> <!-- Assume white background, change as needed -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/grey_tint"/> <!-- Specify your gray color here -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>
